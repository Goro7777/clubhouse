<%- include('../partials/header', { title, links: locals.links }) %>
<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-11 col-lg-9 col-xl-7">
            <!-- <div class="card bg-success text-white" style="border-radius: 1rem"> -->
            <% for (let post of posts) { %>
            <div
                class="card-body mb-4 border border-2 border-success rounded-4 p-3"
            >
                <h5 class="card-title mb-1"><%= post.title %></h5>
                <p class="card-text"><%= post.text %></p>
                <% if (post.isMember) { %>
                <p class="card-text">
                    <strong><em><%= post.fullname %></em></strong>
                </p>
                <p class="card-text">
                    <small class="text-body-secondary"
                        ><%= post.time.toGMTString() %></small
                    >
                </p>
                <% } else { %> <% } %>
            </div>
            <% } %>
            <!-- </div> -->
        </div>
    </div>
</div>
