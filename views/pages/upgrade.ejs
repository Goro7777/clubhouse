<%- include('../partials/header', { title: "Club House" }) %>
<div class="col-12 col-md-11 col-lg-9 col-xl-7">
    <h2 class="fw-bold mb-5 text-uppercase">
        Upgrade Status To <% if (!user.ismember) { %>
        <span class="text-warning">Member</span><% } else if (!user.isadmin) {
        %> <span class="text-danger">Admin</span><% } %>
    </h2>

    <ul class="list-group card-body ms-3">
        <li class="list-group-item">
            <% if (!user.ismember) { %> You will be able to see profiles and
            contact information of all users. <% } else { %>You will be able to
            delete any posts or users.<% } %>
        </li>
    </ul>

    <form
        class="card-body my-5 ms-3"
        action="<%= locals.action %>"
        method="POST"
    >
        <div class="mb-md-1 mt-md-1 pb-5 pt-2">
            <div data-mdb-input-init class="form-outline form-white mb-4">
                <% if (!user.ismember) { %>
                <label class="form-label ms-3" for="title"
                    >To become a <strong class="text-warning">member</strong>,
                    enter the secret <strong>passcode</strong>. (It's
                    "111")</label
                >
                <input
                    type="password"
                    id="passcode"
                    name="passcode"
                    class="form-control border-success"
                /><% } else { %>
                <p class="ms-3">
                    To become an <strong class="text-danger">admin</strong>,
                    send a request. We will respond as soon as possible.
                </p>
                <% } %> <% if (locals.passcodeError) { %>
                <div class="text-warning">Incorrect</div>
                <% } %>
            </div>

            <button class="btn btn-outline-success px-5" type="submit">
                Send
            </button>
        </div>
    </form>
</div>
