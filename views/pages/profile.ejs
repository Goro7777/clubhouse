<%- include('../partials/header', { title: "Profile" }) %>
<div class="col-12 col-md-11 col-lg-9 col-xl-7">
    <h2 class="fw-bold mb-5 text-uppercase">Profile</h2>

    <div class="card card-body mb-4 border-success ms-3">
        <div class="row">
            <div class="col-sm-3">
                <p class="mb-0">Full Name</p>
            </div>
            <div class="col-sm-9">
                <p class="text-muted mb-0">
                    <%= user.firstname + " " + user.lastname %>
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="mb-0">Email</p>
            </div>
            <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.email %></p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="mb-0">Joined on</p>
            </div>
            <div class="col-sm-9">
                <p class="text-muted mb-0">
                    <%= user.joinedon.toDateString() %>
                </p>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-3">
                <p class="mb-0">Status</p>
            </div>
            <div class="col-sm-9">
                <p class="text-muted mb-0"><%= user.status %></p>
            </div>
        </div>
    </div>
</div>
